<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/silver2"
    tools:context=".Screen.signin_activity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/signin_activity_textView"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textSize="100sp"
        />

    <EditText
        android:id="@+id/signin_activity_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/signin_activity_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:padding="20dp"

        />

    <Button
        android:id="@+id/signin_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btncolor"
        android:text="SIGN IN"
        android:layout_margin="40dp"
        android:textSize="50dp"
        />




</androidx.appcompat.widget.LinearLayoutCompat>